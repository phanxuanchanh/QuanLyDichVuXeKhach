{{#if status}}
<div class="row">
    <div class="col">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-check"></i> {{status}}</h5>
        </div>
    </div>
</div>
{{/if}}

<div class="row">
    <div class="col-md-12">
        <form method="POST" action="/admin/employee-management/edit/{{employee.accountId}}">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Chỉnh sửa nhân viên</h3>
                </div>

                <div class="card-body">
                    <input type="hidden" name="accountId" value="{{employee.accountId}}" />
                    <div class="form-group">
                        <label for="username">Tên người dùng</label>
                        <input type="text" class="form-control" placeholder="Tên người dùng" id="username"
                            name="username" value="{{employee.username}}" required />
                    </div>
                    <div class="form-group">
                        <label for="fullname">Tên nhân viên</label>
                        <input type="text" class="form-control" placeholder="Tên nhân viên" id="fullname"
                            name="fullname" value="{{employee.fullname}}" required />
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại</label>
                        <input type="tel" class="form-control" placeholder="Số điện thoại" id="phone" name="phone"
                            value="{{employee.phone}}" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" placeholder="Địa chỉ email" id="email" name="email"
                            value="{{employee.email}}" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Ngày sinh</label>
                        <input type="date" class="form-control" id="birthday" name="birthday"
                            value="{{employee.birthday_formatted}}" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="gender">Giới tính:</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="gender" id="gender">
                                <option value="Nam">Nam</option>
                                <option value="Nu">Nữ</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="title">Chức danh:</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="title" id="title">
                                <option value="Conductor">Nhân viên bán vé</option>
                                <option value="CoachDirver">Tài xế</option>
                                <option value="AssistantDirver">Tài xế phụ</option>
                                <option value="Employer">Chủ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Chỉnh sửa</button>
                    <a href="/admin/employee-management/list" class="btn btn-primary">Quay về danh sách</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    {{#if employee.gender}}
    document.querySelector('#gender').value = 'Nam';
    {{else}}
    document.querySelector('#gender').value = 'Nu';
    {{/if}}

    document.querySelector('#title').value = '{{employee.title}}';
</script>