{{#if status}}
    <div class="row">
        <div class="col">
            <div class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true" onclick="removeQueryString();">×</button>
                <h5><i class="icon fas fa-check"></i> {{status}}</h5>
            </div>
        </div>
    </div>
{{/if}}

<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Projects</h3>
        <div class="card-tools">
            <a class="btn btn-primary" href="/admin/coach-trip-management/create">Tạo mới chuyến xe</a>
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 20%;">
                        #
                    </th>
                    <th style="width: 35%;">
                        Tên chuyến xe
                    </th>
                    <th style="width: 15%;">
                        Trạng thái chuyến
                    </th>
                    <th style="width: 30%; text-align: center;">Công cụ</th>
                </tr>
            </thead>
            <tbody>
                {{#each coachTrips}}
                <tr>
                    <td>
                        {{this.coachTripId}}
                    </td>
                    <td>
                        {{this.name}}
                    </td>
                    <td>
                        {{#if this.status}}
                        Đã hoàn thành chuyến
                        {{else}}
                        Chưa khởi hành
                        {{/if}}
                    </td>
                    <td class="project-actions text-right">
                        <form id="deleteCoachTrip_{{this.coachTripId}}" action="/admin/coach-trip-management/delete/{{this.coachTripId}}" method="POST">
                            <input type="hidden" name="coachTripId" value="{{this.coachTripId}}">
                        </form>
                        <a class="btn btn-success btn-sm" href="/admin/coach-trip-management/detail/{{this.coachTripId}}">
                            <i class="fas fa-folder"></i> Chi tiết
                        </a>
                        <a class="btn btn-primary btn-sm" href="/admin/coach-trip-management/edit/{{this.coachTripId}}">
                            <i class="fas fa-pencil-alt"></i> Sửa
                        </a>
                        <button type="submit" form="deleteCoachTrip_{{this.coachTripId}}" class="btn btn-danger btn-sm"><i
                                class="fas fa-trash"></i> Xóa</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<script type="text/javascript">
    function removeQueryString(){
        location.href = '/admin/coach-trip-management/list'
    }
</script>