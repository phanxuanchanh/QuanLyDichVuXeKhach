{{#if status}}
    <div class="row">
        <div class="col">
            <div class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true" onclick="removeQueryString();">×</button>
                <h5><i class="icon fas fa-check"></i> {{status}}</h5>
            </div>
        </div>
    </div>
{{/if}}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Projects</h3>
        <div class="card-tools">
            <a class="btn btn-primary" href="/admin/coach-ticket-management/sell-ticket">Bán vé xe</a>
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 15%;">
                        #
                    </th>
                    <th style="width: 20%;">
                        Thông tin khách hàng
                    </th>
                    <th style="width: 20%;">
                        Tên chuyến xe
                    </th>
                    <th style="width: 10%;">
                        Trạng thái thanh toán
                    </th>
                    <th style="width: 10%;">
                        Tổng tiền
                    </th>
                    <th style="width: 25%; text-align: center;">Công cụ</th>
                </tr>
            </thead>
            <tbody>
                {{#each coachTickets}}
                    <tr>
                        <td>
                            {{this.coachTicketId}}
                        </td>
                        <td>
                            <p>{{this.Customer.customerName}}</p>
                            <ul>
                                <li>{{this.Customer.email}}</li>
                                <li>{{this.Customer.phone}}</li>
                            </ul>
                        </td>
                        <td>
                          <a href="/admin/coach-trip-management/detail/{{this.CoachTrip.coachTripId}}">{{this.CoachTrip.coachTripName}}</a>
                        </td>
                        <td>
                            {{this.Payment.status}}
                        </td>
                        <td>
                            {{this.TicketDetail.totalMoney}}
                        </td>

                        <td class="project-actions text-right">
                             <form id="deleteCoachTicket_{{this.coachTicketId}}" action="/admin/coach-ticket-management/delete/{{this.coachTripId}}" method="POST">
                                <input type="hidden" name="coachTicketId" value="{{this.coachTicketId}}">
                            </form>
                            <a class="btn btn-success btn-sm" href="/admin/coach-ticket-management/detail/{{this.coachTicketId}}">
                                <i class="fas fa-folder"></i> Chi tiết
                            </a>
                            <button type="submit" form="deleteCoachTicket_{{this.coachTicketId}}" class="btn btn-danger btn-sm"><i
                                    class="fas fa-trash"></i> Xóa</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

<script type="text/javascript">
    function removeQueryString(){
        location.href = '/admin/coach-ticket-management/list'
    }
</script>

